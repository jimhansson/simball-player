        "properties": {
          "p1Instructions": {
            "$ref": "#/components/schemas/PlayerInstructions"
          },
          "p2Instructions": {
            "$ref": "#/components/schemas/PlayerInstructions"
          },
          "p3Instructions": {
            "$ref": "#/components/schemas/PlayerInstructions"
          },
          "p4Instructions": {
            "$ref": "#/components/schemas/PlayerInstructions"
          }
        },
        "additionalProperties": false
