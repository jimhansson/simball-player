          "yourStatus": {
            "$ref": "#/components/schemas/GameTeamStatus"
          },
          "opponentStatus": {
            "$ref": "#/components/schemas/GameTeamStatus"
          },
          "ballStatus": {
            "$ref": "#/components/schemas/BallStatus"
          },
          "correlationId": {
            "type": "string",
            "nullable": true
          },
          "youScored": {
            "type": "boolean"
