        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          },
          "vx": {
            "type": "integer",
            "format": "int32"
          },
          "vy": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GameStatusExtended": {
        "type": "object",
