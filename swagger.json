{
  "openapi": "3.0.1",
  "info": {
    "title": "SimballApiPlayer",
    "version": "1.0"
  },
  "paths": {
    "/Player/update": {
      "post": {
        "tags": [
          "Player"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GameStatusExtended"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/GameStatusExtended"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/GameStatusExtended"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamInstructions"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamInstructions"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamInstructions"
                }
              }
            }
          }
        }
      }
    },
    "/Player/setup": {
      "get": {
        "tags": [
          "Player"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamSetup"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamSetup"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamSetup"
                }
              }
            }
          }
        }
      }
    },
    "/Player": {
      "get": {
        "tags": [
          "Player"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              },
              "application/json": {
                "schema": {
                  "type": "string"
                }
              },
              "text/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
