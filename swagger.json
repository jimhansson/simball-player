      "TeamSetup": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "primaryColor": {
            "$ref": "#/components/schemas/TeamColors"
          },
          "secondaryColor": {
            "$ref": "#/components/schemas/TeamColors"
          }
        },
        "additionalProperties": false
